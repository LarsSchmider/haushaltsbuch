<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haushaltsbuch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Haushaltsbuch">
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar" />
        <activity
            android:name=".ui.login.RegisterActivity"
            android:label="RegisterActivity"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar" />
        <activity
            android:name=".ui.login.ResetPasswordActivity"
            android:label="ResetPasswordActivity"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar" />
        <activity
            android:name=".ui.addeditexpense.AddEditExpense"
            android:label="@string/title_activity_add_edit_expense"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar"></activity>
        <activity
            android:name=".ui.goals.AddGoals"
            android:label="add_Goals"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar" />

        <activity
            android:name=".ui.charts.PieChart"
            android:label="@string/title_activity_pie_chart"
            android:theme="@style/Theme.Haushaltsbuch.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>